#include <iostream>
#include <fstream>
#include <string>
#include <iomanip>
using namespace std;

// Function to calculate average of top 3 scores
double averageTopThree(double q1, double q2, double q3, double q4) {
    double lowest = q1;

    if (q2 < lowest) lowest = q2;
    if (q3 < lowest) lowest = q3;
    if (q4 < lowest) lowest = q4;

    double total = q1 + q2 + q3 + q4;
    return (total - lowest) / 3.0;
}

int main() {
    ifstream inputFile("gradesIn.txt");
    ofstream outputFile("gradesOut.txt");

    if (!inputFile || !outputFile) {
        cerr << "Error opening file." << endl;
        return 1;
    }





    

 inputFile.close();
    outputFile.close();

    cout << "\nOutput saved to 'gradesOut.txt'" << endl;

    return 0;
}

